{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "description": "Renovate configuration for Terragrunt + Terraform + Helm",
    "enabledManagers": [
        "terraform",
        "terragrunt"
    ],
    "terraform": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "terraform",
                "terragrunt"
            ],
            "matchPackagePatterns": [
                ".*"
            ],
            "groupName": "terraform providers",
            "schedule": [
                "before 6am on Thursday"
            ]
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "groupName": "helm charts",
            "schedule": [
                "before 6am on Thursday"
            ]
        },
        {
            "matchManagers": [
                "terraform"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": false
        }
    ],
    "terragrunt": {
        "managerFilePatterns": [
            "/(^|/)terragrunt\\.hcl$/",
            "/(^|/)root\\.hcl$/"
        ]
    },
    "schedule": [
        "at any time"
    ],
    "commitMessagePrefix": "chore(deps): "
}