{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "description": "Renovate configuration for Terragrunt + Terraform + Helm",
    "enabledManagers": [
        "terraform",
        "terragrunt"
    ],
    "terraform": {
        "enabled": true,
        "managerFilePatterns": [
            "/(^|/)versions\\.tf\\.json$/"
        ]
    },
    "ignorePaths": [
        "**/grunt_providers.tf",
        "**/grunt_versions.tf",
        "**/grunt_backend.tf"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "terraform",
                "terragrunt"
            ],
            "groupName": "terraform providers"
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "groupName": "helm charts"
        },
        {
            "matchManagers": [
                "terraform"
            ],
            "matchDatasources": [
                "docker"
            ],
            "enabled": false
        }
    ],
    "schedule": [
        "at any time"
    ],
    "commitMessagePrefix": "chore(deps): "
}